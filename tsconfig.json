{
  "compilerOptions": {
    "target": "esnext",
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
    },
    "baseUrl": "."
  },
  "include": [
    "src",
    "src/**/*.json"
  ],
  "exclude": [
    "**/misc.ts",
    "node_modules",
    "dist",
    "**/*.spec.ts",
  ]
}
